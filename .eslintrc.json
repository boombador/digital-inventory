{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["eslint-plugin-react"],
  "rules": {
    "quotes": ["error", "single"],
    "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 2 }]
  }
}
